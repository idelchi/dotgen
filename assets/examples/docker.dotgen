exclude: {{ notInPath "docker" }}

---
commands:
  - name: dcr
    doc: docker compose run
    cmd: docker compose run --remove-orphans --rm

  - name: dcrb
    doc: docker compose run with build
    cmd: docker compose run --build --remove-orphans --rm

  - name: dcd
    doc: docker compose down
    cmd: docker compose down --remove-orphans

  - name: dcu
    doc: docker compose up
    cmd: docker compose up -d --remove-orphans
